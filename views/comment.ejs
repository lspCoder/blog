<div class="panel panel-default">
<div class="panel-body">
<% if(post.comments.length==0){ %>
  <p>暂无留言</p>
<% }else{ %>
<% post.comments.forEach(function(comment,index){ %>
	<p><a href="<%= comment.website %>"><%=comment.name %></a>
	<span class="info">回复于 <%=comment.time %></span></p>
	<p><%- comment.content %></p>
<% }) %>
<% } %>
</div>
</div>
<div class="panel panel-default" style="overflow: hidden;">
<div class="panel-body">
<form class="form-horizontal" method="post">
  <legend>添加留言</legend>
  <% if(user){ %>
  <div class="form-group">
    <label for="uesrname" class="col-sm-2 control-label">姓名:</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="name" value="<%=user.name %>" required>
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">邮箱:</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="email" value="<%= user.email %>" required>
    </div>
  </div>
  <div class="form-group">
    <label for="website" class="col-sm-2 control-label">网址:</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="website" value="/u/<%= user.name %>" disabled>
    </div>
  </div>
  <% } else { %>
    <div class="form-group">
    <label for="uesrname" class="col-sm-2 control-label">姓名:</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="name"  required>
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">邮箱:</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="email" required>
    </div>
  </div>
  <div class="form-group">
    <label for="website" class="col-sm-2 control-label">网址:</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="website" required>
    </div>
  </div>
  <% } %>
  <div class="form-group">
    <div class="col-sm-11">
      <textarea name="content" rows="5" cols="95" style="border: 1px solid #ccc;overflow:hidden;border-radius:4px;" required></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1">
      <button type="submit" class="btn btn-primary">留言</button>
    </div>
  </div>
</form>
</div>
</div>